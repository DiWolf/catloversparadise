{% block extra_css %}
<style>
/* Team Cards Styles */
.team-card {
    transition: all 0.3s ease;
    border: 1px solid #e9ecef;
}

.team-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
}

.team-image-container {
    height: 200px;
    overflow: hidden;
    position: relative;
}

.team-image {
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
}

.team-card:hover .team-image {
    transform: scale(1.05);
}

.team-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 193, 7, 0.1), rgba(255, 87, 34, 0.1));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.team-card:hover .team-overlay {
    opacity: 1;
}

.team-content {
    min-height: 120px;
    background: #fff;
    padding: 1.5rem !important;
}

.team-name {
    font-size: 1.25rem;
    color: #2c3e50;
    font-family: var(--font-1, 'Arial', sans-serif);
}

.team-role {
    font-size: 0.9rem;
    color: #6c757d;
    font-weight: 500;
}

.team-social {
    margin-top: auto;
}

.social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: #f8f9fa;
    color: #6c757d;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.9rem;
}

.social-link:hover {
    background: var(--accent-color, #ff6b35);
    color: white;
    transform: translateY(-2px);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .team-image-container {
        height: 160px;
    }
    
    .team-content {
        min-height: 100px;
        padding: 1rem !important;
    }
    
    .team-name {
        font-size: 1.1rem;
    }
    
    .team-role {
        font-size: 0.85rem;
    }
}

/* Grid spacing */
.g-4 > * {
    padding: 0.75rem;
}

/* Card height consistency */
.team-card {
    min-height: 320px;
}

@media (max-width: 768px) {
    .team-card {
        min-height: 280px;
    }
}
</style>
{% endblock %}