                                <a href="/breed/mainecoon" class="btn btn-outline-primary btn-sm">
                                    <i class="fa-solid fa-eye me-1"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Elf -->
