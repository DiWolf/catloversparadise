                    </div>
                </div>

                <!-- Exotic Shorthair -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden breed-card">
                        <div class="position-relative">
                            <img src="/public/portal/image/dummy-img-600x400.jpg" class="card-img-top" alt="{{ t('breeds.exotic.name') }}" style="height: 250px; object-fit: cover;">
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-success text-white px-3 py-2 rounded-pill">
                                    <i class="fa-solid fa-paw me-1"></i>{{ t('breeds.exotic.name') }}
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-4">
