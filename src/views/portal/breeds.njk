{% extends "template/portal.njk" %}
{% block title %}
    {{ t('breeds.title') }} - Cat Lovers Paradise
{% endblock %}
{% block content %}
    <!-- Hero Section -->
    <div class="section position-relative" style="background-image: url(/public/portal/image/dummy-img-1920x900.jpg);">
        <div class="image-overlay"></div>
        <div class="r-container section position-relative" style="z-index: 2;">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="text-white fw-bold display-4 mb-4">{{ t('breeds.title') }}</h1>
                    <p class="text-white fs-5 mb-0">Descubre las razas de gatos más especiales y únicas que criamos con amor y dedicación</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Breeds Grid -->
    <div class="section">
        <div class="r-container">
            <div class="row g-4">
                <!-- Bengal -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden breed-card">
                        <div class="position-relative">
                            <img src="/public/portal/image/breeds/bengal-main.png" class="card-img-top" alt="{{ t('breeds.bengal.name') }}" style="height: 250px; object-fit: cover;" onerror="this.src='/public/portal/image/dummy-img-600x400.jpg'">
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                                    <i class="fa-solid fa-paw me-1"></i>{{ t('breeds.bengal.name') }}
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold mb-3">{{ t('breeds.bengal.name') }}</h5>
                            <p class="card-text text-muted mb-4">{{ t('breeds.bengal.description') }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fa-solid fa-heart text-danger me-1"></i>
                                    {{ t('breeds.bengal.temperament') }}
                                </small>
                                <a href="/breed/bengal" class="btn btn-outline-primary btn-sm">
                                    <i class="fa-solid fa-eye me-1"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Maine Coon -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden breed-card">
