{% extends "template/portal.njk" %}

{% block title %}{{ t('error.500.title') }} - Cat Lovers Paradise{% endblock %}

{% block content %}
<!-- Error 500 Section -->
<section class="section py-5">
    <div class="r-container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="error-content">
                    <!-- Error Image -->
                    <div class="error-image mb-4">
                        <img src="/public/portal/image/error500.jpeg" alt="Gato confundido" class="img-fluid" style="max-width: 300px;">
                    </div>
                    
                    <!-- Error Code -->

                    
                    <!-- Error Message -->
                    <div class="error-message mb-4">
                        <h2 class="h3 mb-3">{{ t('error.500.message') }}</h2>
                        <p class="lead text-muted mb-4">
                            {{ t('error.500.description') }}
                        </p>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="error-actions">
                        <a href="/" class="btn btn-primary btn-lg me-3 mb-3">
                            <i class="fa-solid fa-home me-2"></i>
                            {{ t('error.500.goHome') }}
                        </a>
                        <button onclick="location.reload()" class="btn btn-outline-primary btn-lg mb-3">
                            <i class="fa-solid fa-refresh me-2"></i>
                            {{ t('error.contactSupport') }}
                        </button>
                    </div>
                    
                    <!-- Status Information -->
                    <div class="status-info mt-5">
                        <div class="alert alert-info" role="alert">
                            <h5 class="alert-heading">
                                <i class="fa-solid fa-info-circle me-2"></i>
                                {{ t('error.500.whatsHappening') }}
                            </h5>
                            <p class="mb-0">
                                {{ t('error.500.whatsHappeningDesc') }}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Helpful Links -->
                    <div class="helpful-links mt-5">
                        <h5 class="mb-3">{{ t('error.500.meanwhile') }}</h5>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa-solid fa-cat fa-2x text-primary mb-3"></i>
                                        <h6>{{ t('error.500.viewCats') }}</h6>
                                        <p class="small text-muted">{{ t('error.500.viewCatsDesc') }}</p>
                                        <a href="/cats" class="btn btn-sm btn-outline-primary">{{ t('error.500.viewCats') }}</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa-solid fa-phone fa-2x text-success mb-3"></i>
                                        <h6>{{ t('error.500.contact') }}</h6>
                                        <p class="small text-muted">{{ t('error.500.contactDesc') }}</p>
                                        <a href="/contact" class="btn btn-sm btn-outline-success">{{ t('error.500.contact') }}</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fa-solid fa-clock fa-2x text-warning mb-3"></i>
                                        <h6>{{ t('error.500.wait') }}</h6>
                                        <p class="small text-muted">{{ t('error.500.waitDesc') }}</p>
                                        <button onclick="setTimeout(() => location.reload(), 30000)" class="btn btn-sm btn-outline-warning">
                                            {{ t('error.500.wait30s') }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Technical Details (only in development) -->
                    {% if error and NODE_ENV === 'development' %}
                    <div class="technical-details mt-5">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                <h6 class="mb-0">
                                    <i class="fa-solid fa-bug me-2"></i>
                                    {{ t('error.500.technicalDetails') }}
                                </h6>
                            </div>
                            <div class="card-body">
                                <pre class="mb-0"><code>{{ error }}</code></pre>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Fun Cat Facts Section -->
<section class="section py-5 bg-light">
    <div class="r-container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="mb-4">{{ t('error.500.funFacts') }}</h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="fact-card p-3 bg-white rounded shadow-sm">
                            <i class="fa-solid fa-brain fa-2x text-info mb-2"></i>
                            <h6>{{ t('error.500.catIntelligence') }}</h6>
                            <p class="small text-muted mb-0">{{ t('error.500.catIntelligenceDesc') }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="fact-card p-3 bg-white rounded shadow-sm">
                            <i class="fa-solid fa-running fa-2x text-success mb-2"></i>
                            <h6>{{ t('error.500.speed') }}</h6>
                            <p class="small text-muted mb-0">{{ t('error.500.speedDesc') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block extra_css %}
<style>
.error-content {
    padding: 2rem 0;
}

.error-code h1 {
    font-size: 6rem;
    line-height: 1;
    margin-bottom: 0;
    color: var(--accent-color-2);
    font-family: var(--font-1);
}

.error-message h2 {
    color: var(--secondary-color);
    font-family: var(--font-1);
}

.error-message p {
    color: var(--text-color);
}

.error-image img {
    filter: grayscale(20%);
    opacity: 0.8;
    border-radius: 15px;
}

.fact-card {
    transition: transform 0.3s ease;
    border: 2px solid var(--accent-color);
    background-color: var(--light-color) !important;
}

.fact-card:hover {
    transform: translateY(-5px);
    border-color: var(--accent-color-2);
}

.fact-card i {
    color: var(--accent-color-2) !important;
}

.fact-card h6 {
    color: var(--secondary-color);
    font-family: var(--font-1);
}

.fact-card p {
    color: var(--text-color);
}

.helpful-links h5 {
    color: var(--secondary-color);
    font-family: var(--font-1);
}

.helpful-links .card {
    border: 2px solid var(--accent-color);
    background-color: var(--light-color);
    transition: all 0.3s ease;
}

.helpful-links .card:hover {
    border-color: var(--accent-color-2);
    transform: translateY(-3px);
}

.helpful-links .card h6 {
    color: var(--secondary-color);
    font-family: var(--font-1);
}

.helpful-links .card p {
    color: var(--text-color);
}

.helpful-links .card i {
    color: var(--accent-color-2);
}

.btn-primary {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
    color: white;
    font-family: var(--font-2);
    font-weight: 600;
}

.btn-primary:hover {
    background-color: var(--accent-color-2);
    border-color: var(--accent-color-2);
    color: white;
}

.btn-outline-primary {
    color: var(--accent-color-2);
    border-color: var(--accent-color-2);
    font-family: var(--font-2);
    font-weight: 600;
}

.btn-outline-primary:hover {
    background-color: var(--accent-color-2);
    border-color: var(--accent-color-2);
    color: white;
}

.btn-outline-success {
    color: var(--accent-green-2);
    border-color: var(--accent-green-2);
}

.btn-outline-success:hover {
    background-color: var(--accent-green-2);
    border-color: var(--accent-green-2);
    color: white;
}

.btn-outline-warning {
    color: var(--accent-color-2);
    border-color: var(--accent-color-2);
}

.btn-outline-warning:hover {
    background-color: var(--accent-color-2);
    border-color: var(--accent-color-2);
    color: white;
}

.alert-info {
    background-color: var(--accent-color);
    border-color: var(--accent-color-2);
    color: var(--secondary-color);
}

.alert-info .alert-heading {
    color: var(--secondary-color);
    font-family: var(--font-1);
}

.technical-details pre {
    background-color: var(--light-color);
    padding: 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid var(--accent-color);
}

.technical-details .card-header {
    background-color: var(--accent-color-2) !important;
    border-color: var(--accent-color-2);
}

@media (max-width: 768px) {
    .error-code h1 {
        font-size: 4rem;
    }
    
    .error-actions .btn {
        display: block;
        width: 100%;
        margin-bottom: 1rem;
    }
}
</style>
{% endblock %}
