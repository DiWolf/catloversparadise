{% block extra_css %}
<style>
/* Gallery Styles - Following Original Template Pattern */
.gallery a {
    transition: all 0.5s ease;
    display: block;
}

.gallery a:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

.gallery img {
    transition: transform 0.5s ease;
}

.gallery a:hover img {
    transform: scale(1.02);
}
</style>
{% endblock %}

