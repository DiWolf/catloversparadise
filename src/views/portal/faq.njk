{% extends "template/portal.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<!-- Hero Section -->
<div class="section position-relative" style="background-image: url(/public/portal/image/breeds/mainecoon-main.png); min-height: 50vh;">
    <div class="image-overlay"></div>
    <div class="r-container section position-relative" style="z-index: 2;">
        <div class="row align-items-center" style="min-height: 40vh;">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="text-white fw-bold display-4 mb-4 text-shadow">{{ t('faq.title') }}</h1>
                <p class="text-white fs-5 mb-4 text-shadow">{{ t('faq.subtitle') }}</p>
                <nav aria-label="breadcrumb" class="justify-content-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-white text-decoration-none">
                                <i class="fa-solid fa-home me-1"></i>{{ t('nav.home') }}
                            </a>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page">
                            <i class="fa-solid fa-question-circle me-1"></i>{{ t('faq.title') }}
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="r-container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="font-2 fw-semibold mb-3">{{ t('faq.helpTitle') }}</h2>
                    <p class="text-gray fs-5">{{ t('faq.helpDescription') }}</p>
                </div>

                <!-- FAQ Categories -->
                <div class="row mb-5">
                    <div class="col-12">
                        <div class="accordion" id="faqAccordion">
                            <!-- Adoption Questions -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="adoption1">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAdoption1" aria-expanded="true" aria-controls="collapseAdoption1">
                                        {{ t('faq.adoption1.question') }}
                                    </button>
                                </h2>
                                <div id="collapseAdoption1" class="accordion-collapse collapse show" aria-labelledby="adoption1" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.adoption1.answer') }}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="adoption2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAdoption2" aria-expanded="false" aria-controls="collapseAdoption2">
                                        {{ t('faq.adoption2.question') }}
                                    </button>
                                </h2>
                                <div id="collapseAdoption2" class="accordion-collapse collapse" aria-labelledby="adoption2" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.adoption2.answer') }}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="adoption3">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAdoption3" aria-expanded="false" aria-controls="collapseAdoption3">
                                        {{ t('faq.adoption3.question') }}
                                    </button>
                                </h2>
                                <div id="collapseAdoption3" class="accordion-collapse collapse" aria-labelledby="adoption3" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.adoption3.answer') }}
                                    </div>
                                </div>
                            </div>

                            <!-- Health Questions -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="health1">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHealth1" aria-expanded="false" aria-controls="collapseHealth1">
                                        {{ t('faq.health1.question') }}
                                    </button>
                                </h2>
                                <div id="collapseHealth1" class="accordion-collapse collapse" aria-labelledby="health1" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.health1.answer') }}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="health2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHealth2" aria-expanded="false" aria-controls="collapseHealth2">
                                        {{ t('faq.health2.question') }}
                                    </button>
                                </h2>
                                <div id="collapseHealth2" class="accordion-collapse collapse" aria-labelledby="health2" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.health2.answer') }}
                                    </div>
                                </div>
                            </div>

                            <!-- Care Questions -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="care1">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCare1" aria-expanded="false" aria-controls="collapseCare1">
                                        {{ t('faq.care1.question') }}
                                    </button>
                                </h2>
                                <div id="collapseCare1" class="accordion-collapse collapse" aria-labelledby="care1" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.care1.answer') }}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="care2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCare2" aria-expanded="false" aria-controls="collapseCare2">
                                        {{ t('faq.care2.question') }}
                                    </button>
                                </h2>
                                <div id="collapseCare2" class="accordion-collapse collapse" aria-labelledby="care2" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        {{ t('faq.care2.answer') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact CTA -->
                <div class="row">
                    <div class="col-12">
                        <div class="bg-accent-color p-5 rounded-3 text-center text-white">
                            <h3 class="font-2 fw-semibold mb-3">{{ t('faq.ctaTitle') }}</h3>
                            <p class="fs-5 mb-4">{{ t('faq.ctaDescription') }}</p>
                            <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                                <a href="/contact" class="btn btn-light btn-lg">
                                    <i class="fa-solid fa-envelope me-2"></i>{{ t('faq.contactButton') }}
                                </a>
                                <a href="/support" class="btn btn-outline-light btn-lg">
                                    <i class="fa-solid fa-life-ring me-2"></i>{{ t('faq.supportButton') }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_css %}
<style>
/* Hero Section Styles */
.hero-section {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.text-shadow {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.breadcrumb {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 25px;
    padding: 0.5rem 1rem;
}

.breadcrumb-item a:hover {
    color: var(--accent-color) !important;
}

.accordion-button:not(.collapsed) {
    background-color: var(--accent-color);
    color: white;
}

.accordion-button:focus {
    box-shadow: 0 0 0 0.25rem rgba(var(--accent-color-rgb), 0.25);
}
</style>
{% endblock %}
